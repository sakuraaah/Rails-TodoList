<h1>My To-Do List</h1>

<table class="table table-bordered my-4">
  <tbody>
    <% @lists.each do |list| %>

      <% if list.completed %>
        <tr class="table-secondary">
          <td class="align-middle">
            <%= link_to list.description, edit_list_path(list), class: 'link-secondary striker' %>
          </td>
          <td class="align-middle">
            <% link_to "Show", list %>
            <% link_to "Edit", edit_list_path(list) %>
            <%= button_to "Delete", list, method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}}, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% else %>
        <tr>
          <td class="align-middle">
            <%= link_to list.description, edit_list_path(list), class: 'link-secondary' %>
          </td>
          <td class="align-middle">
            <% link_to "Show", list %>
            <% link_to "Edit", edit_list_path(list) %>
            <%= button_to "Delete", list, method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}}, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<div class="card text-center mx-auto" style="width: 18rem;">
  <div class="card-body">
    <%= render "form_index", list: @list %>
  </div>
</div>